													option(value="Киносъёмка")  Киносъёмка
													option(value="Новый год")  Новый год
													option(value="Свадьба")  Свадьба
													option(value="Корпоратив")  Корпоратив
													option(value="Киносъёмка")  Киносъёмка
												
												
